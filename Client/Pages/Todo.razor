@page "/Todo"

<h1>Todo (@todos.Count(todo => !todo.IsDone))</h1>

<ul>
    @foreach (var todo in todos)
    {
        <li>   
            <input type="checkbox" @bind="todo.IsDone" />
            <input @bind="todo.Title" />
        </li>
    }
</ul>

<input placeholder="Something todo" @bind="newTodo" />
<button @onclick="AddTodo">Add todo</button>

@code {
    private List<TodoItem> todos = new();               // private list for the todo items
    private string newTodo;                             // for new todo's

    private void AddTodo() 
    {
        if (!string.IsNullOrWhiteSpace(newTodo))        //checks to see if there is anything in the newtodo
        {
            todos.Add(new TodoItem { Title = newTodo });    //adds todo item to the list
            newTodo = string.Empty;                         // set newtodo to an empty string
        }
    }
}
